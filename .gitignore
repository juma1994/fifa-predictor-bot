def predict_final_score(current_score, p1, p2):
    try:
        home, away = map(int, current_score.split("â€“"))
    except:
        home, away = 0, 0

    margin = abs(p1 - p2)
    predicted_home = home + (1 if p1 < p2 else 0)
    predicted_away = away + (1 if p2 < p1 else 0)

    if margin < 0.2:
        predicted_home += 1
        predicted_away += 1
    elif margin > 1:
        if p1 < p2:
            predicted_home += 2
        else:
            predicted_away += 2

    return f"{predicted_home} â€“ {predicted_away}"

